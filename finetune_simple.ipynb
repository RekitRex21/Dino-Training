 "cells": [
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": ["# Dino Fine-Tuning - Phi-3 Mini"]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Step 1: Install dependencies\n",
    "!pip install -q transformers>=4.40 accelerate peft bitsandbytes datasets"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Step 2: Clear any old model cache and clone fresh\n",
    "!rm -rf Dino-Training model_output\n",
    "!git clone https://github.com/RekitRex21/Dino-Training.git\n",
    "%cd Dino-Training"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Step 3: Load training data\n",
    "import json\n",
    "import os\n",
    "\n",
    "data = []\n",
    "for f in os.listdir('.'):\n",
    "    if f.endswith('.json') or f.endswith('.jsonl'):\n",
    "        with open(f) as fp:\n",
    "            if f.endswith('.jsonl'):\n",
    "                data.extend([json.loads(l) for l in fp])\n",
    "            else:\n",
    "                data.extend(json.load(fp))\n",
    "\n",
    "print(f\"Loaded {len(data)} examples\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Step 4: Load Phi-3 model\n",
    "from transformers import AutoModelForCausalLM, AutoTokenizer\n",
    "\n",
    "model_name = \"microsoft/Phi-3-mini-4k-instruct\"\n",
    "\n",
    "tokenizer = AutoTokenizer.from_pretrained(model_name, trust_remote_code=True)\n",
    "tokenizer.pad_token = tokenizer.eos_token\n",
    "\n",
    "model = AutoModelForCausalLM.from_pretrained(\n",
    "    model_name,\n",
    "    device_map=\"auto\",\n",
    "    load_in_4bit=True,\n",
    "    trust_remote_code=True\n",
    ")\n",
    "print(\"Model loaded!\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Step 5: Format data\n",
    "def format_example(ex):\n",
    "    return f\"### Instruction\\n{ex.get('instruction', '')}\\n\\n### Input\\n{ex.get('input', '')}\\n\\n### Response\\n{ex['output']}\"\n",
    "\n",
    "texts = [format_example(d) for d in data]\n",
    "print(f\"Formatted {len(texts)} examples\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Step 6: Tokenize\n",
    "from datasets import Dataset\n",
    "\n",
    "ds = Dataset.from_dict({\"text\": texts})\n",
    "\n",
    "def tokenize_fn(ex):\n",
    "    return tokenizer(ex[\"text\"], truncation=True, max_length=512)\n",
    "\n",
    "tokenized = ds.map(tokenize_fn, batched=True)\n",
    "print(\"Tokenized!\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Step 7: Setup LoRA\n",
    "from peft import LoraConfig, get_peft_model\n",
    "\n",
    "lora_config = LoraConfig(\n",
    "    r=8,\n",
    "    lora_alpha=16,\n",
    "    target_modules=[\"q_proj\", \"k_proj\", \"v_proj\"],\n",
    "    lora_dropout=0.1,\n",
    "    bias=\"none\",\n",
    "    task_type=\"CAUSAL_LM\"\n",
    ")\n",
    "\n",
    "model = get_peft_model(model, lora_config)\n",
    "model.print_trainable_parameters()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Step 8: Train!\",
    "from transformers import TrainingArguments, Trainer\n",
    "\n",
    "args = TrainingArguments(\n",
    "    output_dir=\"./model_output\",\n",
    "    num_train_epochs=3,\n",
    "    per_device_train_batch_size=4,\n",
    "    learning_rate=2e-4,\n",
    "    fp16=True,\n",
    "    logging_steps=5,\n",
    ")\n",
    "\n",
    "trainer = Trainer(model=model, args=args, train_dataset=tokenized)\n",
    "trainer.train()\n",
    "print(\"Training done!\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Step 9: Save model\n",
    "model = model.merge_and_unload()\n",
    "model.save_pretrained(\"./rex-dino-v1\")\n",
    "tokenizer.save_pretrained(\"./rex-dino-v1\")\n",
    "print(\"Model saved to ./rex-dino-v1 !\")\n",
    "print(\"Download this folder to run locally!\")"
   ]
  }
 ],
